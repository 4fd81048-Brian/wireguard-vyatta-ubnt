tag:
type: txt
help: WireGuard instance interface name

val_help: wgX; WireGuard interface name

create:
	sudo ip link add dev $VAR(@) type wireguard
delete:
	sudo ip link del dev $VAR(@)
syntax:expression: pattern $VAR(@) "^wg[0-9]+$" ;
	"Interface name must be (wg0 - wg99)"
commit:expression: $VAR(./address) != "" ;
	"Must configure the address for $VAR(@)"
commit:expression: $VAR(./local-port) != "" ;
	"Must configure local port for $VAR(@)"
commit:expression: $VAR(./private-key) != "" ;
	"Private key must be specified for $VAR(@)"
