type: txt
help: File containing private key for this host
syntax:expression: exec "/opt/vyatta/sbin/check_file_in_config_dir $VAR(@) '/config/auth'"
val_help: File in /config/auth

create:
	sudo wg set $VAR(../@) public-key $VAR(@)
delete:
	sudo wg set $VAR(../@) public-key /dev/null
update:
	sudo wg set $VAR(../@) public-key $VAR(@)
